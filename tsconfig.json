{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "baseUrl": "./src",
        "jsx": "react",
        "lib": [
            "dom",
            "es2015"
        ],
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./dist/",
        "rootDirs": [
            "./src"
        ],
        "target": "es2015"
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules"
    ]
}
